rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Groups collection
    match /groups/{groupId} {
      // Anyone authenticated can read groups (needed for join by invite code)
      allow read: if request.auth != null;

      // Anyone authenticated can create a group
      allow create: if request.auth != null;

      // Only group members can update
      allow update: if request.auth != null &&
        (request.auth.uid in resource.data.memberAuthUids ||
         // Allow joining: new member adding themselves
         request.auth.uid in request.resource.data.memberAuthUids);

      // Only creator can delete
      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.createdByAuthUid;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Anyone authenticated can read expenses
      allow read: if request.auth != null;

      // Anyone authenticated can create expenses
      allow create: if request.auth != null;

      // Only the creator can update or delete
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.createdByAuthUid;
    }
  }
}
